{
  "manifest_version": 2,
  "name": "Diff",
  "short_name": "Diff",
  "description": "Track changes, comment, and collaborate on web applications as a team.",
  "minimum_chrome_version": "60",
  "version": "0.0.24",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/",
    "storage",
    "contextMenus",
    "identity",
    "notifications"
  ],
  "web_accessible_resources": [
    "js/*",
    "frontend/*",
    "images/*",
    "html/*",
    "fonts/*",
    "http://localhost:9000/*",
    "https://api.getdiff.app/*"
  ],
  "background": {
    "scripts": [
      "js/env.js",
      "js/auth0chrome.js",
      "js/main.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Diff",
    "default_icon": "images/icon_128.png",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "externally_connectable": {
    "matches": ["http://localhost:8000/app/", "*://getdiff.app/*"]
  }
}
