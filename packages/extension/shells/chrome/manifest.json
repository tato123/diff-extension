{
  "manifest_version": 2,
  "name": "Diff",
  "short_name": "Diff",
  "description": "Track changes, comment, and collaborate on web applications as a team.",
  "minimum_chrome_version": "49",
  "version": "0.0.19",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/",
    "storage",
    "contextMenus"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "contentScript.js",
    "frontend/*",
    "fonts/*.ttf",
    "http://localhost:9000/*",
    "https://api.getdiff.app/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Diff"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:8000/app/", "*://getdiff.app/*"]
  }
}
